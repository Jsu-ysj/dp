**/










//具体代码
#include<bits/stdc++.h>
using namespace std;

int mp[1001][1001];
int main()
{
	int n;
	cin >> n;
	int m = 1;
	for(int i = 1; i <= n; i ++){
		for(int j = 1; j <= m; j ++){
			cin >> mp[i][j];
		}
		++ m;
	}
	for(int i = n - 1; i >= 1; i --){
		for(int j = 1; j <= m; j ++){
			mp[i][j] = mp[i][j] + max(mp[i+1][j], mp[i+1][j+1]);
		}
		m --;
	}
	cout << mp[1][1] << endl;
	return 0;
}
